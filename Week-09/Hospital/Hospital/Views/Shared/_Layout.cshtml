<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hospital</title>

    <!-- CSS Files -->
    <link href="~/css/Patient/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Patient/icofont.min.css" rel="stylesheet" />
    <link href="~/plugins/icofont/icofont.css" rel="stylesheet" />
    <link href="~/css/Patient/slick.css" rel="stylesheet" />
    <link href="~/css/Patient/slick-theme.css" rel="stylesheet" />
    <link href="~/css/Patient/style.css" rel="stylesheet" />
</head>
<body id="top">

    <!-- ======= Header / Navbar ======= -->
    <header>
        <nav class="navbar navbar-expand-lg navigation" id="navbar">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/logo.png" alt="Logo" class="img-fluid" />
                </a>

                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarmain"
                        aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icofont-navigation-menu"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarmain">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Doctors</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="AppointmentsList">Appointments</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ======= Main Content ======= -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer class="footer section gray-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mr-auto col-sm-6">
                    <div class="widget mb-5 mb-lg-0">
                        <div class="logo mb-4">
                            <img src="~/Images/logo.png" alt="" class="img-fluid" />
                        </div>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. </p>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 col-sm-6">
                    <div class="widget mb-5 mb-lg-0">
                        <h4 class="text-capitalize mb-3">Quick Links</h4>
                        <ul class="list-unstyled footer-menu lh-35">
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Doctor" asp-action="Index">Doctors</a></li>
                            <li><a asp-controller="Home" asp-action="Appointment">Appointment</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="widget widget-contact mb-5 mb-lg-0">
                        <h4 class="text-capitalize mb-3">Get in Touch</h4>
                        <p>123 Street, Alexandria, Egypt</p>
                        <p><i class="icofont-email"></i> info@hospital.com</p>
                        <p><i class="icofont-phone"></i> +20 111 222 333</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS Files -->
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/js/Patient/bootstrap.min.js"></script>

    <script src="~/js/Patient/jquery.waypoints.min.js"></script>
    <script src="~/js/Patient/slick.min.js"></script>
    <script src="~/js/Patient/script.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
